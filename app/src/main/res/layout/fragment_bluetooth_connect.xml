<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEDE1"
    android:padding="16dp">

    <!-- 柴犬圖片 -->
    <ImageView
        android:id="@+id/dogImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/dog_stretch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleText"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <!-- 標題文字 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/custom_font"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dogImage"
        app:layout_constraintBottom_toBottomOf="@id/dogImage"
        app:layout_constraintStart_toEndOf="@id/dogImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading 狀態文字 -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loding..."
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/dogImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/receivedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="等待資料中..."
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/loadingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
